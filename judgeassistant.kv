#:import SettingScreen setting.SettingScreen
<BaseButton>:
    font_size: sp(19)
<MDLabel>:
    font_name: "assets/languages/AL-Mohanad.ttf"
<MDTextField>:
    font_name: "assets/languages/Amiri-Regular.ttf"
    font_name_hint_text: "assets/languages/AL-Mohanad.ttf"
